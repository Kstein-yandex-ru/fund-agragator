{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>User_name</th>
                <th>User_surname</th>
                <th>Company_name</th>
                <th>Logotype</th>
                <th>Slogan</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.userName }}</td>
                <td>{{ user.userSurname }}</td>
                <td>{{ user.companyName }}</td>
                <td>{{ user.logotype }}</td>
                <td>{{ user.slogan }}</td>


                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="20">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
