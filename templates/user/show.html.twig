{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ user.type }}</td>
            </tr>
            <tr>
                <th>User_name</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>User_surname</th>
                <td>{{ user.userSurname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Telegram</th>
                <td>{{ user.telegram }}</td>
            </tr>
            <tr>
                <th>Company_name</th>
                <td>{{ user.companyName }}</td>
            </tr>
            <tr>
                <th>Logotype</th>
                <td>{{ user.logotype }}</td>
            </tr>
            <tr>
                <th>Slogan</th>
                <td>{{ user.slogan }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Site</th>
                <td>{{ user.site }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Registration_date</th>
                <td>{{ user.registrationDate ? user.registrationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Login_date</th>
                <td>{{ user.loginDate ? user.loginDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hide_contacts</th>
                <td>{{ user.hideContacts ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
